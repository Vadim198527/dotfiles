# font_family      "Iosevka Nerd Font Mono"
# bold_font        auto
# italic_font      auto
# bold_italic_font auto

font_size 16.0
map ctrl+c copy_to_clipboard
map ctrl+v paste_from_clipboard
map cmd+1 send_text all \x1b1
map cmd+2 send_text all \x1b2
map cmd+3 send_text all \x1b3
map cmd+4 send_text all \x1b4
map cmd+5 send_text all \x1b5
map cmd+6 send_text all \x1b6
map cmd+7 send_text all \x1b7
map cmd+8 send_text all \x1b8
map cmd+9 send_text all \x1b9


dynamic_background_opacity yes

# Отправка SIGINT (Ctrl+C) при нажатии Ctrl+Alt+C
map ctrl+alt+c send_text all \x03

# Отправка EOF (Ctrl+D) при нажатии Ctrl+Alt+D
map ctrl+alt+d send_text all \x04

# Отправка SIGTSTP (Ctrl+Z) при нажатии Ctrl+Alt+Z
map ctrl+alt+z send_text all \x1A

# BEGIN_KITTY_THEME
# Catppuccin-Mocha
include current-theme.conf
# END_KITTY_THEME

# background #22334a

# BEGIN_KITTY_FONTS
font_family      family="JetBrainsMonoNL Nerd Font Mono"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS
